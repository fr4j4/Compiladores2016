//-------- [1] PRIMERA SECCION 'Declaraciones preliminares'
import java_cup.runtime.*;
//-------- [2] SEGUNDA SECCION 'Declaracion de terminales y no-terminales'
terminal          IGUAL, MENOS, MAS, DIV, POR, LPAREN, RPAREN,CONST,ID,INICIO,FIN,SI,ENTONCES,OPREL,LEER;
non terminal      S,
                  inst_1,
                  inst_2,
                  inst_leer,
                  inst_escribir,
                  inst_si,
                  inst_asig,
                  texto,
                  exp,
                  cond
                  ;

//-------- [3] TERCERA SECCION 'Precedencia y asociatividad de terminales'

precedence left MAS, MENOS; 
precedence left POR, DIV; 
precedence left IGUAL,ID;
precedence left LPAREN,RPAREN;
precedence left ID,LEER;
precedence left SI, ENTONCES;

//-------- [4] CUARTA SECCION  'Gramatica'

S         ::=   INICIO inst_1 FIN;
inst_1    ::=   inst_2
              | inst_1 inst_2;
inst_2    ::=   inst_leer                     
              | inst_escribir           
              | inst_si           
              | inst_asig;
inst_si   ::=   SI cond ENTONCES inst_1;
inst_leer ::=   LEER LPAREN ID RPAREN texto ;
inst_asig ::=   ID IGUAL exp;
texto     ::=   ID                            
              | CONST;
exp       ::=   exp MAS exp                   
              | exp MENOS exp           
              | exp POR exp       
              | exp DIV exp
              | ID                          
              | CONST;
cond      ::=   exp OPREL exp;





